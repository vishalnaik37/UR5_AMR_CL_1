    </visual>
    <collision>
      <origin xyz="0.5 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>
  <joint name="plate_slider_joint" type="prismatic">
    <parent link="plate"/>
    <child link="plate_slider"/>
    <origin xyz="0 0 0.035" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.5" upper="0.25" effort="5" velocity="0.1"/>
  </joint>


  <link name="base_link_1">
    <visual>
      <geometry>
        <mesh filename="package://ur5_description/meshes/ur5/visual/Base.dae"/>
      </geometry>
      <origin rpy="0.0 0.0 2.3561944875" xyz="0.0 0.0 0.003"/>
    </visual>

    <collision>
      <geometry>
        <mesh filename="package://ur5_description/meshes/ur5/collision/Base.dae"/>
      </geometry>

    </collision>
  <inertial>
    <mass value="4.0"/>
    <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
  </inertial>
  </link>
  
<joint name="base_to_ur5" type="fixed">
