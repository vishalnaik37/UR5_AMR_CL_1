    </inertial>
  </link>
  <joint name="joint_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.2 -0.24 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ========================= -->
  <!-- Caster -->
  <!-- ========================= -->
  <link name="caster">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.0381"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.0381"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  <joint name="caster_joint" type="continuous">
    <parent link="base_link"/>
    <child link="caster"/>
    <origin xyz="-0.3 0.0 -0.07" rpy="1.57 0 0"/>
  </joint>

  <!-- ========================= -->
  <!-- Pole and Plate -->
  <!-- ========================= -->
  <link name="pole">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <material name="grass">
        <color rgba="0.36 0.67 0.18 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.004375" ixy="0" ixz="0" iyy="0.004375" iyz="0" izz="0.005"/>
    </inertial>
  </link>
  <joint name="pole_joint" type="fixed">
    <parent link="base_link"/>
    <child link="pole"/>
    <origin xyz="0.225 0 0.27" rpy="0 0 3.1416"/>
  </joint>

  <!-- Rotating Plate -->
  <link name="plate">
    <visual>
      <origin xyz="0.25 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 0.1 0.02"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.5 0.3 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  <joint name="plate_joint" type="revolute">
    <parent link="pole"/>
    <child link="plate"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.1416" upper="3.1416" effort="5" velocity="1"/>
  </joint>

  <!-- Plate Slider -->
  <link name="plate_slider">
    <visual>
      <origin xyz="0.5 0 0.0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.05"/>
