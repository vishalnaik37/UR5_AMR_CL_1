      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </inertial>
  </link>

    <!-- Fixed joint to attach to robot's end-effector -->
  <joint name="brush_joint" type="fixed">
    <parent link="ee_link"/> <!-- Replace ee_link with your robot's end-effector link -->
    <child link="brush_link"/>
    <origin xyz="0 0 0.0" rpy="0 1.57 0"/>
  </joint>




<!-- Joints -->

<!-- World → bottom cylinder -->
<joint name="world_to_base_link" type="fixed">
  <parent link="world"/>
  <child link="base_link"/>
  <origin xyz="0 0 0.05" rpy="0 0 0"/>
</joint>


<link name="washbasin_link">
  <visual>
    <geometry>
      <mesh filename="package://ur5_description/meshes/ur5/visual/basin.STL" scale="0.001 0.001 0.001"/>
    </geometry>
    <origin xyz="0.2 0 0.8" rpy="-3.14 0 0"/> <!-- half height above ground -->
    <material name="White">
      <color rgba="0.9 0.9 0.9 1.0"/>
    </material>
  </visual>
  <collision>
    <geometry>
      <cylinder radius="0.3" length="0.1"/> <!-- simple collision -->
    </geometry>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </collision>
  <inertial>
    <mass value="5.0"/>
    <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </inertial>
</link>

<joint name="world_to_washbasin" type="fixed">
  <parent link="world"/>
  <child link="washbasin_link"/>
  <origin xyz="-1.3 0.15 0.05" rpy="0 0 0"/>
</joint>


<!-- Attch a counte weight -->
<link name="counterweight">
  <visual>
    <origin xyz="-0.3 0 0.05" rpy="0 0 0"/> <!-- behind slider along -X -->
    <geometry>
      <box size="0.1 0.1 0.1"/> <!-- adjust size as needed -->
    </geometry>
    <material name="gray">
      <color rgba="0.5 0.5 0.5 1"/>
    </material>
  </visual>
  <collision>
    <origin xyz="-0.3 0 0.025" rpy="0 0 0"/>
    <geometry>
      <box size="0.1 0.1 0.05"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="10000.0"/>
    <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
  </inertial>
</link>

<joint name="counterweight_to_slider" type="fixed">
  <parent link="plate"/>
  <child link="counterweight"/>
  <origin xyz="0.1 0 0" rpy="0 0 0"/> <!-- relative to slider -->
</joint>


