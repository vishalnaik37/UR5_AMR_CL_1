</gazebo>

<gazebo reference="wrist_2_link">
    <material>Gazebo/Orange</material>
</gazebo>

<gazebo reference="wrist_3_link">
    <material>Gazebo/Orange</material>
</gazebo>

<gazebo reference="basin_link2">
    <material>Gazebo/Black</material>
</gazebo>
<gazebo reference="stand_link">
    <material>Gazebo/Black</material>
</gazebo>
<gazebo reference="basin_link">
    <material>Gazebo/Black</material>
</gazebo>
<gazebo reference="washbasin_link">
    <material>Gazebo/Red</material>
</gazebo>
<gazebo reference="brush_link">
    <material>Gazebo/Blue</material>
</gazebo>

<!-- Joints -->

<!-- World → bottom cylinder -->
<joint name="world_to_basin2" type="fixed">
  <parent link="world"/>
  <child link="basin_link2"/>
  <origin xyz="0 0 0.05" rpy="0 0 0"/>
</joint>

<!-- Bottom cylinder → stand -->
<joint name="basin2_to_stand" type="fixed">
  <parent link="basin_link2"/>
  <child link="stand_link"/>
  <origin xyz="0 0 0.05" rpy="0 0 0"/>
</joint>

<!-- Stand → top cylinder -->
<joint name="stand_to_basin" type="fixed">
  <parent link="stand_link"/>
  <child link="basin_link"/>
  <origin xyz="0 0 0.8" rpy="0 0 0"/> <!-- top cylinder sits on stand -->
</joint>


<link name="washbasin_link">
  <visual>
    <geometry>
      <mesh filename="package://ur5_description/meshes/ur5/visual/basin.STL" scale="0.001 0.001 0.001"/>
    </geometry>
    <origin xyz="0.2 0 0.8" rpy="-3.14 0 0"/> <!-- half height above ground -->
    <material name="White">
      <color rgba="0.9 0.9 0.9 1.0"/>
    </material>
  </visual>
  <collision>
    <geometry>
      <cylinder radius="0.3" length="0.1"/> <!-- simple collision -->
    </geometry>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </collision>
  <inertial>
    <mass value="5.0"/>
    <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </inertial>
</link>

<joint name="world_to_washbasin" type="fixed">
  <parent link="world"/>
  <child link="washbasin_link"/>
  <origin xyz="0 0 0.05" rpy="0 0 0"/>
</joint>

